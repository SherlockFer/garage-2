pipeline{
    agent any 
    
    stages{       
        
        stage('Git: Clone') { 
            steps{
                sh "test -e .git && git clean -fdx 2>/dev/null || true"                    
                git credentialsId: "jenkins-rsa", branch: "master", url: "git@github.com:SherlockFer/quickpoll.git"              
            }
        } 
        
        stage('Run test booking'){
            steps{
                sh "cd garage-api-test && java -jar karate-0.9.5.jar --env=docker booking.feature"
            }
        }
    }

    post {
        always {
            publishHTML(
                target: [
                    allowMissing: false,
                    alwaysLinkToLastBuild: false,
                    keepAll: true,
                    reportDir: "target/cucumber-html-reports",
                    reportFiles: 'overview-features.html',
                    reportName: "Report"
                ]
            ) 
        }
    }
}